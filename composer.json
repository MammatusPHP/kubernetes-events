{
  "name": "mammatus/kubernetes-events",
  "description": "\u2638\ud83d\udce3 Kubernetes related Events",
  "license": "MIT",
  "require": {
    "php": "^8.4.13",
    "symfony/yaml": "^7.3"
  },
  "require-dev": {
    "wyrihaximus/makefiles": "^0.7.10",
    "wyrihaximus/test-utilities": "^8.5"
  },
  "autoload": {
    "psr-4": {
      "Mammatus\\Kubernetes\\Events\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mammatus\\Tests\\Kubernetes\\Events\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "drupol/composer-packages": true,
      "ergebnis/composer-normalize": true,
      "icanhazstring/composer-unused": true,
      "infection/extension-installer": true,
      "mammatus/cron": true,
      "mindplay/composer-locator": true,
      "phpstan/extension-installer": true,
      "wyrihaximus/broadcast": true,
      "wyrihaximus/makefiles": true,
      "wyrihaximus/test-utilities": true
    },
    "platform": {
      "php": "8.4.13"
    },
    "sort-packages": true
  },
  "extra": {
    "php-di-definitions": {
      "di": [
        "etc/di/*.php"
      ]
    },
    "wyrihaximus": {
      "broadcast": {
        "has-listeners": true
      }
    }
  },
  "scripts": {
    "post-install-cmd": [
      "make on-install-or-update || true"
    ],
    "post-update-cmd": [
      "make on-install-or-update || true"
    ]
  }
}
